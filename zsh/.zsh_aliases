# tree: prettioes output
alias tree='tree -AC --dirsfirst'

# grep: line numbers (-n), ignore case (-i), colors
alias grep='grep --color'

# ls: default list
alias ls='ls -lvAh --color=auto --group-directories-first'

# less: show colors
alias less='less -R'

# cd: quickly navigate upwards in directories
alias ~='cd ~'
alias /='cd /'
alias ..='cd ..'
alias ...='cd ../..'
alias ....='cd ../../..'
alias .....='cd ../../../..'

# git
alias g='git'
if command -v lazygit >/dev/null 2>&1; then
    alias lg='lazygit'
fi

# kubernetes
if command -v kubectl >/dev/null 2>&1; then
    alias k='kubectl'
fi

# nvim
if command -v nvim >/dev/null 2>&1; then
    alias v='nvim'
fi

# eza
if command -v eza >/dev/null 2>&1; then
    alias ll='eza -a -lb --icons=auto --group-directories-first'
    alias lt='ll --tree -I .git'
fi

# decode jwt
jwtd() {
    if [[ -x $(command -v jq) ]]; then
         jq -R 'split(".") | .[0],.[1] | @base64d | fromjson' <<< "${1}"
         echo "Signature: $(echo "${1}" | awk -F'.' '{print $3}')"
    fi
}

# SSH fzf
sshf () {
    local server
    server=$(grep -E '^Host ' ~/.ssh/config | awk '{print $2}' | fzf)
    if [[ -n $server ]] then
        ssh $server
    fi
}
